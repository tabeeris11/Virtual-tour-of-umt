    <body>
      <div id="preloader" style="display: none;"></div>
    
           <div class="container">
            <div class="upper div">
              <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS06gM9dg8UBoJcvUguYmOg9qRMaAccDWM16m8KwlsqnsRARrYs" alt="images/png" width="30%" height="100%"/>
