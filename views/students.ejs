        <br>
        <form style="max-width:500px;margin:auto" name="myForm" action="tours" onsubmit="return validatefrom()" method="post">
          <h2>User Information</h2>
          <div class="input-container">
            <i class="fa fa-info icon"></i>
            <input class="input-field" type="id" placeholder="CNIC" id="CNIC" >
            <p id="cnicerror" class="error"></p>
          </div>

          <div class="input-container">
            <i class="fa fa-user icon"></i>
            <input class="input-field" type="text" placeholder="Full Name" id="fname" >
            <p id="fnameerror" class="error"></p>
          </div>
          
          <div class="input-container">
              <i class="fa fa-envelope icon"></i>
              <input class="input-field" type="email" placeholder="Email" id="email" >
              <p id="emailerror" class="error"></p>
            </div>
          
          <div class="input-container">
            <i class="fa fa-address-book icon"></i>
            <input class="input-field" type="phone" placeholder="Contact Number" id="phone" >
            <p id="phoneerror" class="error"></p>
          </div>
        
          <h3><br><button type="submit" class="btn" value="submit">Enter to view</button></h3>
                 <p class="OR"> Already provide information</p>
                 <h3><a href="already-givens" class="clickhere">Click Here</a></h3>
        </form>
