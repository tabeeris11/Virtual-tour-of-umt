        <div id="footer">
          <a class="footer" href="https://www.umt.edu.pk/"><mark class="markcolor">Click Here to visit <b>UMT Offical website.      </b>Click Here to visit <b>UMT Offical website.      </b>Click Here to visit <b>UMT Offical website.     </b>Click Here to visit <b>UMT Offical website.     </b>Click Here to visit <b>UMT Offical website.</b> </mark></a>
      </div>
      <script>
        var loader = document.getElementById("preloader");
    window.addEventListener("load", function(){
        loader.style.display  =  "none";
    })  
        let fname = document.getElementById("fname");
        let email = document.getElementById("email");
        let CNIC = document.getElementById("CNIC");
        let phone = document.getElementById("phone");
        let flag =1;

       
function  validatefrom(){

  if(fname.value==""){
  document.getElementById("fnameerror").innerHTML="user name is empty"; flag = 0;
  }else if(fname.value.length < 3){
    document.getElementById("fnameerror").innerHTML="user name required minimum 3 charater"; flag = 0;
  }else{
    document.getElementById("fnameerror").innerHTML=""; flag = 1;
  }

  if(CNIC.value==""){
  document.getElementById("cnicerror").innerHTML="CNIC is empty"; flag = 0;}
  else if(CNIC.value.length != 13){
    document.getElementById("cnicerror").innerHTML="Enter 13 number of CNIC"; flag = 0;
  }else{
    document.getElementById("cnicerror").innerHTML=""; flag = 1;
  }

  if(email.value==""){
  document.getElementById("emailerror").innerHTML="EMAIL is empty"; flag = 0;}
  else{
    document.getElementById("emailerror").innerHTML=""; flag = 1;
  }

  if(phone.value==""){
  document.getElementById("phoneerror").innerHTML="Phone Number is empty"; flag = 0;
  }else if(phone.value.length != 11){
    document.getElementById("phoneerror").innerHTML="Phone Number required 11 digits "; flag = 0;
  }else{
    document.getElementById("phoneerror").innerHTML=""; flag = 1;
  }

  
 if(flag==1){
   return true;
 }
  else{
    return false;
 }

}
        
        
       </script>
       

